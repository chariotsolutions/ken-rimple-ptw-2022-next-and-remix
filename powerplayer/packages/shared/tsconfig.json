{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "jsx": "react-jsx",
    "module": "esnext",
    "rootDir": "./src",
    "declaration": true,
    "outDir": "./dist",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src/index.ts"]
}
